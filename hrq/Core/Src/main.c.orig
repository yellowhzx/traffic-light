void HAL_TIM_PeriodElapsedCallback(TIM_HandleTypeDef *htim)
{
    uint8_t test;
    if(htim->Instance == TIM1)
    {
        if(++test == 5)
        {
            HAL_GPIO_TogglePin(PC13_GPIO_Port,PC13_Pin);//单独输出电平取反
            HAL_GPIO_TogglePin(LEDNorth1_GPIO_Port,LEDNorth1_Pin);
            test = 0;
        }
    }
}
/* USER CODE END 0 */

/**
  * @brief  The application entry point.
  * @retval int
  */
int main(void)
{
    /* USER CODE BEGIN 1 */

    /* USER CODE END 1 */

    /* MCU Configuration--------------------------------------------------------*/

    /* Reset of all peripherals, Initializes the Flash interface and the Systick. */
    HAL_Init();

    /* USER CODE BEGIN Init */

    /* USER CODE END Init */

    /* Configure the system clock */
    SystemClock_Config();

    /* USER CODE BEGIN SysInit */

    /* USER CODE END SysInit */

    /* Initialize all configured peripherals */
    MX_GPIO_Init();
    MX_TIM1_Init();
    /* USER CODE BEGIN 2 */
    OLED_Init();//初始化OLED
    OLED_Clear();//清屏
	
    sprintf((char *)OledString,"East :");//东
    OLED_ShowString(0,0,OledString,12); //oled显示
    sprintf((char *)OledString,"West :");//西
    OLED_ShowString(0,2,OledString,12); //oled显示
    sprintf((char *)OledString,"South:");//南
    OLED_ShowString(0,4,OledString,12); //oled显示
    sprintf((char *)OledString,"North:");//北
    OLED_ShowString(0,6,OledString,12); //oled显示
	
    /* USER CODE END 2 */
	HAL_TIM_Base_Start_IT(&htim1);
    /* Infinite loop */
    /* USER CODE BEGIN WHILE */
    while (1)
    {
        /* USER CODE END WHILE */
		//OLED显示
        sprintf((char *)OledString,"%02d",time_red_WE);		//东-红
		OLED_ShowString(50,0,OledString,12); 
		sprintf((char *)OledString,"%02d",time_yellow_WE);	//东-黄
		OLED_ShowString(75,0,OledString,12); 
		sprintf((char *)OledString,"%02d",time_green_WE);	//东-绿
		OLED_ShowString(100,0,OledString,12); 
		sprintf((char *)OledString,"%02d",time_green_WE);	//西-红
		OLED_ShowString(50,2,OledString,12); 
		sprintf((char *)OledString,"%02d",time_yellow_WE);	//西-黄
		OLED_ShowString(75,2,OledString,12); 
		sprintf((char *)OledString,"%02d",time_red_WE);		//西-绿
		OLED_ShowString(100,2,OledString,12); 
		
		sprintf((char *)OledString,"%02d",time_red_SN);		//南-红
		OLED_ShowString(50,4,OledString,12); 
		sprintf((char *)OledString,"%02d",time_yellow_SN);	//南-黄
		OLED_ShowString(75,4,OledString,12); 
		sprintf((char *)OledString,"%02d",time_green_SN);	//南-绿
		OLED_ShowString(100,4,OledString,12); 
		sprintf((char *)OledString,"%02d",time_green_SN);	//北-红
		OLED_ShowString(50,6,OledString,12); 
		sprintf((char *)OledString,"%02d",time_yellow_SN);	//北-黄
		OLED_ShowString(75,6,OledString,12); 
		sprintf((char *)OledString,"%02d",time_red_SN);		//北-绿
		OLED_ShowString(100,6,OledString,12); 
		
        /* USER CODE BEGIN 3 */
    }
    /* USER CODE END 3 */
}

